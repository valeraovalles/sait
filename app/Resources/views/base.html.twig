<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Telesur{% endblock %}</title>
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
            <script src="{{ asset('js/datatable.js') }}"></script>
            <script src="{{ asset('js/general.js') }}"></script>
            <script src="{{ asset('libs/twitter-bootstrap/docs/assets/js/bootstrap.js') }}"></script>
        {% endblock %}

        {% block stylesheets %}
            <link href="{{ asset('css/general.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('libs/menu/css/menu.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/datatable.css') }}" rel="stylesheet" type="text/css"/>
            <link rel="stylesheet" href="{{ asset('libs/twitter-bootstrap/docs/assets/css/bootstrap.css') }}">
        {% endblock %}
    </head>

    <body>
        <div align='center'>
            <div class="contenedorprincipal">
            <div id='banner'><img src="{{ asset('images/banner.jpg') }}"></div>
            <div class="titulo-banner">UBICACIÓN ACTUAL: {% block titulobanner %} {% endblock %}</div>
            <div class="menu">{% block menu %}{% endblock %}</div>
            <div id="contenedor">
                {% block body %}
                    
                    {% block mensaje %}  {% endblock %}
                {% endblock %}

            </div>
            <footer>
                <div class="pie">
                    La Nueva Televisión del Sur C.A. (TVSUR) TeleSUR © | Todo el contenido de esta página es exclusivo para el uso interno del canal. RIF. G-20004500-0 
                </div>
            </footer>
        </div>
        <div>
            <script>$('#usuario').popover();</script>             
    </body>
</html>
