{% extends '::mercal.html.twig' %}
 
{% block title %}Sit{% endblock %}

{% block titulobanner %}
    MERCAL
{% endblock %}

{% block body -%}
    {{ parent() }}
    
    <div class="titulo">LISTADO DE JORNADAS</div>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('alert') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tablalista">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombrejornada</th>
                <th>Fechajornada</th>
                <th>Estatus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('jornada_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombrejornada }}</td>
                <td>{% if entity.fechajornada %}{{ entity.fechajornada|date('Y-m-d') }}{% endif %}</td>
                <td>
                    {% if entity.culminada==true %}
                        Culminada
                    {% else %}
                        Activa
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('jornada_show', { 'id': entity.id }) }}">Ver</a> | 
                    <a href="{{ path('jornada_edit', { 'id': entity.id }) }}">Editar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
        <a class="btn btn-primary" href="{{ path('jornada_new') }}">
               Nueva jornada
        </a>
        <br>

    {% endblock %}
