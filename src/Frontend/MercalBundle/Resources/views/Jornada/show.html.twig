{% extends '::mercal.html.twig' %}
 
{% block title %}Detalle de Jornada{% endblock %}

{% block titulo %}
    DETALLE DE JORNADA
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li><a href="{{ path("jornada") }}">LISTA DE JORNADAS</a></li>
  <li class="active">DETALLE DE JORNADA</li>
</ol>
{% endblock %}

{% block body -%}
    {{ parent() }}
        <div class="formShow" style="width:85%;">
            <div class="contenedorform">
                <div class="labelform">Nombre jornada:</div>
                <div class="widgetform">{{ entity.nombrejornada }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Fecha jornada:</div>
                <div class="widgetform">{{ entity.fechajornada|date('Y-m-d') }}</div>
            </div>
        </div>


        <a class="btn btn-default" href="{{ path('jornada') }}">
            Volver al listado
        </a> | 

        <a class="btn btn-default" href="{{ path('jornada_edit', { 'id': entity.id }) }}">
            Ir a editar
        </a>
        <br><br>
        <form action="{{ path('jornada_delete', { 'id': entity.id }) }}" onclick="return confirm('Â¿Seguro que desea eliminar?')" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button  class="btn btn-danger"type="submit">Borrar</button>
        </form>

{% endblock %}
