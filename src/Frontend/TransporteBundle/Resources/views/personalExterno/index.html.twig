{% extends '::transporte.html.twig' %}
 
{% block title %}Lista de Personal Externo{% endblock %}

{% block titulo %}
    LISTA DE PERSONAL EXTERNO
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li class="active">LISTA DE PERSONAL EXTERNO</li>
</ol>
{% endblock %}

{% block body -%}
    {{ parent() }}
    
    <table id="tabladatatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cedula</th>
                <th>Nombre y Apellido</th>
                <th>Tel&eacute;fono</th>
                <th>Acci&oacute;n</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('personalexterno_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cedula }}</td>
                <td>{{ entity.nombre|upper }}</td>
                <td>{{ entity.telefono }}</td>
                <td>
                    <a href="{{ path('personalexterno_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></a>
                    <a href="{{ path('personalexterno_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></a>
                                     
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br><br>
    <a class="btn btn-default" href="{{ path('personalexterno_new') }}">Nuevo Personal</a>
    <br><br>
    <script type="text/javascript">
    $(document).ready(function(){
       $('#tabladatatable').dataTable( { //CONVERTIMOS NUESTRO LISTADO DE LA FORMA DEL JQUERY.DATATABLES- PASAMOS EL ID DE LA TABLA
            "sPaginationType": "full_numbers", //DAMOS FORMATO A LA PAGINACION(NUMEROS)
            "aaSorting": [[0,'asc'],[1,'asc']],
        } );
    })
</script>
    {% endblock %}
