{% extends '::transporte.html.twig' %}
 
{% block title %}Crear de Personal Externo{% endblock %}

{% block titulo %}
    CREAR PERSONAL EXTERNO
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li><a href="{{ path("personalexterno_list") }}">LISTADO PERSONAL EXTERNO</a></li>
  <li class="active">CREAR PERSONAL EXTERNO</li>
</ol>
{% endblock %}

{% block body -%}
    {{ parent() }}

    {% if form_errors(form.cedula) or form_errors(form.nombre) or form_errors(form.telefono) %}
    <div class="alert alert-danger errores" style="width:70%;">
        <div><b>Alerta! Ha ocurrido un error en el formulario</b><br><br></div>
    </div>
    {% endif %}
    <form novalidate action="{{ path('personalexterno_create') }}" method="post" {{ form_enctype(form) }}>{{ form_widget(form._token) }}
               
        <div class="formShow">
            <br>
            <div class="contenedorform">
                <div class="text-error">{{ form_errors(form.cedula) }}</div>
                <div class="labelform">Cédula:</div>
                <div class="widgetform">{{ form_widget(form.cedula) }}</div>
            </div>
            <div class="contenedorform">
                <div class="text-error">{{ form_errors(form.nombre) }}</div>                    
                <div class="labelform">Nombre y Apellido:</div>
                <div class="widgetform">{{ form_widget(form.nombre, {'attr':{'class':'txtMay'}}) }}</div>
            </div>
            <div class="contenedorform">
                <div class="text-error">{{ form_errors(form.telefono) }}</div>
                <div class="labelform">Teléfonos:</div>
                <div class="widgetform">{{ form_widget(form.telefono) }}</div>
            </div>  
        </div>
        <br><br>
            <button class="btn btn-primary" type="submit">CREAR</button> |
        <a class="btn btn-default" href="{{ path('personalexterno_list') }}">VOLVER</a>
        <br>
    </form>

<script>
    $(".txtMay").css({
        'text-transform':'uppercase',
    });
</script>  
{% endblock %}
