    <BR><button class="btn btn-primary" type="submit">EDITAR</button> | 
            <a class="btn btn-default" href="{{ path('personalexterno_list') }}">IR A LA LISTA</a> | 
            <a class="btn btn-default" href="{{ path('personalexterno_show', { 'id': entity.id }) }}">IR A CONSULTAR</a>
    </form>

{% endblock %}