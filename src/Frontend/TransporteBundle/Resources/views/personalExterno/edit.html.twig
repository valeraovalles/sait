</ol>
{% endblock %}

{% block body -%}
    {{ parent() }}
    
    <form action="{{ path('personalexterno_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>{{ form_widget(edit_form._token) }}
