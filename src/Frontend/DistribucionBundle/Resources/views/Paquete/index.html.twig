{% extends '::distribucion.html.twig' %}
{% block title %}Distribuci√≥n{% endblock %}

{% block titulobanner %}
    PAQUETES - LISTA
{% endblock %}

    
{% block body -%}
    {{ parent() }}
    <div class="titulo">LISTA DE PAQUETES</div>

    {% if app.session.started %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="Greenflash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('alert') %}
            <div class="Redflash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}

    {% endif %}

    <table class="records_list" cellpaddin=0 cellspacing=0>
        <thead>
            <tr>
                <th>Id</th>
                <th>Paquete</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr {% if loop.index is odd %}style="background-color: #e9f5fe;"{% endif %}>
                <td><a href="{{ path('paquete_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.paquete }}</td>
                <td>
                    <a href="{{ path('paquete_show', { 'id': entity.id }) }}"><img width="15px" src="{{ asset('images/busca.png')}}"></a>
         
                    {% if is_granted('ROLE_DISTRIBUCION_ADMINISTRADOR') %}
                    <a href="{{ path('paquete_edit', { 'id': entity.id }) }}"><img width="15px" src="{{ asset('images/edit.png')}}"></a>
                    {% endif %}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>
    {% if is_granted('ROLE_DISTRIBUCION_ADMINISTRADOR') %}
    <a class="btn" href="{{ path('paquete_new') }}">Ir a nuevo</a>
    <br><br>
    {% endif %}
    {% endblock %}
