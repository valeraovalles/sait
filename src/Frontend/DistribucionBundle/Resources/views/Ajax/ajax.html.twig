{% if mostrar=='tipooperador' %}
    <div class="form-contenedor">
        <div class="labels">Tipo Operador:</div>
		<div class="widgets">{{ form_widget(form.tipooperador) }}</div>
    </div>
    <div id="operador"></div>
{% endif %}

{% if mostrar=='operador' %}
    <div class="form-contenedor">
        <div class="labels">Operador:</div>
        <div class="widgets">{{ form_widget(form.operador) }}</div>
    </div>
    <div id="fechadesde"></div>
{% endif %}

{% if mostrar=='fechadesde' %}
    <div class="form-contenedor">
        <div class="labels">Fecha desde:</div>
        <div class="widgets">{{ form_widget(form.fechadesde) }}</div>
    </div>
    <div id="fechahasta"></div>
{% endif %}

{% if mostrar=='fechahasta' %}
    <div class="form-contenedor">
        <div class="labels">Fecha hasta:</div>
        <div class="widgets">{{ form_widget(form.fechahasta) }}</div>
    </div>
    <div id="formato"></div>
{% endif %}


{% if mostrar=='formato' %}
    <div class="form-contenedor">
        <div class="labels">Formato:</div>
        <div class="widgets">{{ form_widget(form.formato) }}</div>
    </div>
    <div id="botones"></div>
{% endif %}

{% if mostrar=='botones' %}
        <br>
        <button class="btn" type="submit">Generar</button> | 

        <a class="btn" href="{{ path('distribucion_homepage') }}">Ir al inicio</a>
{% endif %}

<script type="text/javascript">
    $(document).ready(function () {

        $('#form_tipooperador').change(function(){
            var dato = $("#form_pais").val()+"-"+$("#form_tipooperador").val();
            var ruta = "{{ path('ajax', {'datos': 'variable','mostrar': 'operador'}) }}";
            ruta = ruta.replace("variable", dato);
            $('#operador').load(ruta);
        });

        $('#form_operador').change(function(){
            var dato = $("#form_operador").val();
            var ruta = "{{ path('ajax', {'datos': 'variable','mostrar': 'fechadesde'}) }}";
            ruta = ruta.replace("variable", dato);
            $('#fechadesde').load(ruta);
        });

        $('#form_fechadesde').change(function(){
            var dato = $("#form_operador").val();
            var ruta = "{{ path('ajax', {'datos': 'variable','mostrar': 'fechahasta'}) }}";
            ruta = ruta.replace("variable", dato);
            $('#fechahasta').load(ruta);
        });

        $('#form_fechahasta').change(function(){
            var dato = $("#form_operador").val();
            var ruta = "{{ path('ajax', {'datos': 'variable','mostrar': 'formato'}) }}";
            ruta = ruta.replace("variable", dato);
            $('#formato').load(ruta);
        });

        $('#form_formato').change(function(){
            var dato = $("#form_formato").val();
            var ruta = "{{ path('ajax', {'datos': 'variable','mostrar': 'botones'}) }}";
            ruta = ruta.replace("variable", dato);
            $('#botones').load(ruta);
        });
    });
</script>