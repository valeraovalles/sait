{% extends '::distribucion.html.twig' %}
{% block title %}Distribución - Lista{% endblock %}

{% block titulobanner %}
    PÁGINA PRINCIPAL DISTRIBUCIÓN
{% endblock %}

    
{% block body -%}
    {{ parent() }}
    <div class="titulo">PAIS "{{ pais.pais|upper}}"<br>TIPO DE OPERADOR "{{ top.operador|upper }}"</div>

    {% if app.session.started %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="Greenflash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% endif %}


    <table class="records_list" cellpaddin=0 cellspacing=0>
        <thead>
            <tr>

                <th>{{ knp_pagination_sortable(pagination, 'Id', 'o.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Nombre', 'o.nombre') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'País', 'p.pais') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Tipo operador', 't.operador') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Estatus', 'o.estatus') }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}

               <tr {% if loop.index is odd %}style="background-color: #e9f5fe;"{% endif %}>
                <td><a href="{{ path('operador_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.pais.pais }}</td>
                <td>{{ entity.tipooperador.operador }}</td>
                <td>{% if entity.estatus == 1 %} Activo {% else %} Inactivo {% endif %}</td>
                <td>
                        <a href="{{ path('operador_show', { 'id': entity.id }) }}"><img width="15px" src="{{ asset('images/busca.png')}}"></a>
         
                        <a href="{{ path('operador_edit', { 'id': entity.id }) }}"><img width="15px" src="{{ asset('images/edit.png')}}"></a>
                </td>
            </tr>


            {% else %}

                <tr><td colspan="6" style="text-align:center">NO EXISTEN DATOS PARA MOSTRAR</td></tr>

        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination)|raw }}
    </div>

<br>
    <a href="{{ path('distribucion_homepage') }}">Volver al Mapa</a>
<br><br>

    
    {% endblock %}
