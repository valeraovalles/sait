{% extends '::distribucion.html.twig' %}

{% block title %}Inicio - Telesur{% endblock %}

{% block titulobanner %}
    DISTRIBUCIÓN - CONSULTAR - REPRESENTANTE
{% endblock %}

{% block body %}

{{ parent() }}


    <div class="titulo">REPRESENTANTE ({{ entity.nombreS | upper }})</div>

    <div class="formShow">
        <div class="contenedorform">
            <div class="labelform">Nombres:</div>
            <div class="widgetform">{{ entity.nombres }}</div>
        </div>

        <div class="contenedorform">
            <div class="labelform">Apellidos:</div>
            <div class="widgetform">{{ entity.apellidos }}</div>
        </div>

        <div class="contenedorform">
            <div class="labelform">Cargo:</div>
            <div class="widgetform">{{ entity.cargo }}</div>
        </div>

        <div class="contenedorform">
            <div class="labelform">correo:</div>
            <div class="widgetform">{{ entity.correo }}</div>
        </div>

        <div class="contenedorform">
            <div class="labelform">Telefono 1:</div>
            <div class="widgetform">{{ entity.telefono1 }}</div>
        </div>

        {% if entity.telefono2!='' %}
            <div class="contenedorform">
                <div class="labelform">Telefono 2:</div>
                <div class="widgetform">{{ entity.telefono2 }}</div>
            </div>
        {% endif %}

        {% if entity.fax!='' %}
            <div class="contenedorform">
                <div class="labelform">Fax:</div>
                <div class="widgetform">{{ entity.fax }}</div>
            </div>
        {% endif %}

        {% if entity.observacion!='' %}
            <div class="contenedorform">
                <div class="labelform">Observacion:</div>
                <div class="widgetform">{{ entity.observacion }}</div>
            </div>
        {% endif %}
    </div>

<br>
    <a class="btn" href="{{ path('representante') }}">Ir a lista</a> | 
    <a class="btn" href="{{ path('representante_edit', { 'id': entity.id }) }}">Ir a editar</a> | 
    <a class="btn" href="{{ path('operador_show', {'id': entity.operador.id}) }}">Ir al operador</a>
<br><br>

