{% extends '::distribucion.html.twig' %}

{% block title %}Reporte Informativo{% endblock %}

{% block titulo %}
    REPORTE INFORMATIVO
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li><a href="{{ path("distribucion_homepage") }}">DISTRIBUCIÃ“N INICIO</a></li>
  <li class="active">REPORTE INFORMATIVO</li>
</ol>
{% endblock %}

{% block body -%}
    {{ parent() }}
    
    <form class="formNewEditOperador" novalidate action="{{ path('generar_reporte', { 'tipo': 'informativo','formato': 'xls'}) }}" method="post" {{ form_enctype(form) }}>

        {{ form_widget(form._token) }}

        <div class="formShow" style="width:700px;">
            <div class="contenedorform">
                    {{ form_errors(form.pais) }}
                    <div class="labelform" style="width:30%;">Pais:</div>
                    <div class="widgetform">{{ form_widget(form.pais,{'attr':{'style':'width:70%;height:150px;','class':'xx'}}) }}</div>
                </div>

                <div id="tipooperador"></div>
        </div>
    </form>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#form_pais').click(function(){
                var dato = $("#form_pais").val();
                var ruta = "{{ path('ajax', {'datos': 'variable','mostrar': 'tipooperador'}) }}";
                ruta = ruta.replace("variable", dato);
                $('#tipooperador').load(ruta);
            });

            $("#form_pais input[type=checkbox]").prop('checked', true);
        });
    </script>

    <br>
{% endblock %}


    
