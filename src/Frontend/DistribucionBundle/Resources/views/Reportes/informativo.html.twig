{% extends '::distribucion.html.twig' %}
 
{% block title %}Distribucion - Telesur{% endblock %}


{% block titulobanner %}
    REPORTES
{% endblock %}


{% block body -%}
    {{ parent() }}
    
    <div class="titulo">INGRESE LOS PAR√ÅMETROS</div>

    <form name="form1" class="formNewEditOperador" novalidate action="{{ path('reporte_informativo') }}" method="post" {{ form_enctype(form) }}>

        {{ form_widget(form._token) }}

        <fieldset>
            <legend id="a"><div class="divisor">DATOS DE OPERADOR</div></legend>

                <div class="form-contenedor">
                    {{ form_errors(form.pais) }}
                    <div class="labels">Pais:</div>
                    <div class="widgets">{{ form_widget(form.pais) }}</div>
                </div>

                <div id="tipooperador"></div>
                <div id="operador"></div>
     	</fieldset>

        <br>
        <button class="btn" type="submit">Generar</button> | 

        <a class="btn" href="{{ path('distribucion_homepage') }}">Ir al inicio</a>



    </form>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#form_pais').change(function(){
                $('#tipooperador').load('/sait/web/app_dev.php/distribucion/ajax/'+$("#form_pais").val()+'/tipooperador');
            });

            $('#form_tipooperador').change(function(){
                $('#operador').load('/sait/web/app_dev.php/distribucion/ajax/'+$("#form_pais").val()+'-'+$("#form_tipooperador").val()+'/operador');
            });
        });
    </script>

{% endblock %}


    
