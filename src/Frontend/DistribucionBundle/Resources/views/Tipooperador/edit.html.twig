{% extends '::distribucion.html.twig' %}

{% block title %}EDITAR TIPO DE OPERADOR{% endblock %}

{% block titulo %}
    EDITAR TIPO OPERADOR {{ entity.operador | upper}}
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li><a href="{{ path("distribucion_homepage") }}">DISTRIBUCIÓN INICIO</a></li>
  <li><a href="{{ path("tipooperador") }}">LISTA DE TIPO DE OPERADORES</a></li>
  <li class="active">EDITAR TIPO DE OPERADOR</li>
</ol>
{% endblock %}

{% block body %}
    {{ parent() }}

    <form novalidate class="formNewEditOperador" action="{{ path('tipooperador_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />

        {{ form_widget(edit_form._token) }}
        <div class="formShow" style="width:500px;">
                <div class="contenedorform">
                    <div class="text-danger">{{ form_errors(edit_form.operador) }}</div>
                    <div class="labelform">Tipo:</div>
                    <div class="widgetform">{{ form_widget(edit_form.operador) }}</div>
                </div>
                
                <div class="contenedorform">
                    <div class="text-danger">{{ form_errors(edit_form.codigo) }}</div>
                    <div class="labelform">Código:</div>
                    <div class="widgetform">{{ form_widget(edit_form.codigo, { 'attr': {'readonly': 'readonly' } }) }}</div>
                </div>
        </div>                
        <br>
            <button class="btn btn-primary" type="submit">EDITAR</button> |

            <a class="btn btn-default" href="{{ path('tipooperador') }}">IR A LA LISTA</a>
    </form>

    <form action="{{ path('tipooperador_delete', { 'id': entity.id }) }}" method="post" onsubmit="return confirm('¿Seguro que desea borrar?')">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">BORRAR</button>
    </form>
{% endblock %}
