{% extends '::distribucion.html.twig' %}

{% block title %}DISTRIBUCIÓN{% endblock %}

{% block titulobanner %}
    TIPO DE OPERADOR - CONSULTA
{% endblock %}

{% block body %}

{{ parent() }}

    <div class="titulo">CONSULTA TIPO DE OPERADOR</div>

    {% if app.session.started %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="Greenflash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% endif %}

    <div class="formShow">

        <div class="contenedorform">
            <div class="labelform">Id:</div>
            <div class="widgetform">{{ entity.id }}</div>
        </div>

        <div class="contenedorform">
            <div class="labelform">Tipo:</div>
            <div class="widgetform">{{ entity.operador }}</div>
        </div>

        <div class="contenedorform">
                <div class="labelform">Código:</div>
                <div class="widgetform">{{ entity.codigo }}</div>
        </div>

        <div class="contenedorform">
                <div class="labelform">Última Modificación:</div>
                <div class="widgetform">{{ entity.user.primernombre | title
 }} {{ entity.user.primerapellido | title
 }}</div>
        </div>

    </div>

    <br>

    {% if is_granted('ROLE_DISTRIBUCION_ADMINISTRADOR') %}
    <form action="{{ path('tipooperador_delete', { 'id': entity.id }) }}" method="post" onsubmit="return confirm('¿Seguro que desea borrar?')">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">Borrar</button>
    </form>

    <a class="btn" href="{{ path('tipooperador_edit', { 'id': entity.id }) }}">
        Ir a editar
    </a>
    |{% endif %}
    <a class="btn" href="{{ path('tipooperador') }}">
        Ir a lista
    </a>
    <br><br>

{% endblock %}
