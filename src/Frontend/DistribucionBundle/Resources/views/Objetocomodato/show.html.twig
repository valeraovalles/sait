{% extends '::distribucion.html.twig' %}

{% block title %}DISTRIBUCIÓN{% endblock %}

{% block titulobanner %}
    OBJETO COMODATO - CONSULTA
{% endblock %}

{% block body %}

{{ parent() }}

    <div class="titulo">CONSULTA OBJETO DE COMODATO</div>

    {% if app.session.started %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="Greenflash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% endif %}

    <div class="form-show">

        <div class="contenedor">
            <div class="labelshow">Id:</div>
            <div class="dato">{{ entity.id }}</div>
        </div>

        <div class="contenedor">
            <div class="labelshow">Objeto:</div>
            <div class="dato">{{ entity.objeto }}</div>
        </div>

        <div class="contenedor">
                <div class="labelshow">Última Modificación:</div>
                <div class="dato">{{ entity.user.primernombre | title
 }} {{ entity.user.primerapellido | title
 }}</div>
        </div>

    </div>

    <br>

    {% if is_granted('ROLE_DISTRIBUCION_ADMINISTRADOR') %}
    <form action="{{ path('objetocomodato_delete', { 'id': entity.id }) }}" method="post" onsubmit="return confirm('¿Seguro que desea borrar?')">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">Borrar</button>
    </form>

    <a class="btn" href="{{ path('objetocomodato_edit', { 'id': entity.id }) }}">
        Ir a editar
    </a>
    |{% endif %}
    <a class="btn" href="{{ path('objetocomodato') }}">
        Ir a la lista
    </a>
    
    <br><br>


{% endblock %}
