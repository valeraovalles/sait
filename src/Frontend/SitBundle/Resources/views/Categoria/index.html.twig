{% extends '::sit.html.twig' %}
 

{% block title %}Categorias{% endblock %}

{% block titulo %}
    LISTA DE CATEGORIAS
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li class="active">LISTA DE CATEGORIAS</li>
</ol>
{% endblock %}


{% block body -%}
    {{ parent() }}
    
    <table id="tabladatatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th style="width:60%">Categoria</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.categoria }}</td>
                <td>

                        <a href="{{ path('categoria_edit', { 'id': entity.id }) }}">Editar</a> | 
                        <a href="{{ path('subcategoria_new', { 'id': entity.id }) }}">Nueva Subcat.</a> | 
                        <a href="{{ path('subcategoria', { 'id': entity.id }) }}">Lista de Subcat.</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br><br><br>
    <a class="btn btn-primary" href="{{ path('categoria_new') }}">
        IR A NUEVA CATEGORIA
    </a>
    <br><br>

    <script type="text/javascript">
        $(document).ready(function(){
           $('#tabladatatable').dataTable( { //CONVERTIMOS NUESTRO LISTADO DE LA FORMA DEL JQUERY.DATATABLES- PASAMOS EL ID DE LA TABLA
                "sPaginationType": "full_numbers", //DAMOS FORMATO A LA PAGINACION(NUMEROS)
                "aaSorting": [[0,'asc'],[1,'asc']],
            } );
        })
    </script>
    {% endblock %}
