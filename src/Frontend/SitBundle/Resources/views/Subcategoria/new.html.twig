{% extends '::sit.html.twig' %}
 
{% block title %}Nueva subcategoria{% endblock %}

{% block titulo %}
    NUEVA SUBCATEGORIA <br><h5>CATEGORIA {{ categoria.categoria|upper }}</h5>
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li><a href="{{ path("categoria") }}">LISTA DE CATEGORIAS</a></li>
  <li class="active">NUEVA SUBCATEGORIA</li>
</ol>
{% endblock %}



{% block body -%}
    {{ parent() }}
    
    {% if form_errors(form.subcategoria)  %}
    <div class="alert alert-danger">
        <ul>
            <li>{{ form_errors(form.subcategoria) }}</li>
        </ul>
    </div>
    {% endif %}

    <form novalidate action="{{ path('subcategoria_create', { 'id': categoria.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form._token) }}
        <br>
        <div class="formShow">
            <div class="contenedorform">
                <div class="labelform">Subcategoria:</div>
                <div class="widgetform">{{ form_widget(form.subcategoria) }}</div>
            </div>
            <div class="contenedorform" style="display:none;">
                <div class="labelform">Categoria:</div>
                <div class="widgetform">{{ form_widget(form.categoria) }}</div>
            </div>
        </div>
    
        <button class="btn btn-primary" type="submit">CREAR</button>
      
    </form>



{% endblock %}
