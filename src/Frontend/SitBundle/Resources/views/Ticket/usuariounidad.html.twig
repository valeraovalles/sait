{% extends '::sit.html.twig' %}
 
{% block title %}Sit{% endblock %}


{% block titulobanner %}
    ASIGNAR UNIDAD A USUARIO
{% endblock %}


{% block body -%}
    {{ parent() }}
    
    <div class="titulo">ASIGNAR UNIDAD A USUARIO</div>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('alert') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <form action="{{ path('ticket_asignarusuariounidad',{'id': entity.id }) }}" method="post">
        <div class="formShow">
            <div class="contenedorform">
                <div class="labelform">Nombres:</div>
                <div class="widgetform">{{ entity.primernombre }} {{ entity.segundonombre }}</div>
            </div>
            <div class="contenedorform">
                <div class="labelform">Apellidos:</div>
                <div class="widgetform">{{ entity.primerapellido}} {{ entity.segundoapellido }}</div>
            </div>
            {% if usuariounidad %}
            <div class="contenedorform">
                <div class="labelform">Unidad actual:</div>
                <div class="widgetform">{{ usuariounidad[0].descripcion|upper}}</div>
            </div>
            {% endif %}
            <div class="contenedorform">
                <div class="labelform">Unidad:</div>
                <div class="widgetform">{{ form_widget(form.unidad) }}</div>
            </div>
        </div>
        <input type="submit" value="Guardar asociaciÃ³n" class="btn btn-primary">
    </form>

{% endblock %}
