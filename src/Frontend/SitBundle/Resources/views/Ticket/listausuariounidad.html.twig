{% extends '::sit.html.twig' %}
 
{% block title %}Sit{% endblock %}


{% block titulobanner %}
    LISTADO DE USUARIOS
{% endblock %}


{% block body -%}
    {{ parent() }}
    
    <div class="titulo">LISTADO DE USUARIOS</div>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('alert') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}


    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tablalista">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Cedula</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.primernombre }} {{ entity.segundonombre }}</td>
                <td>{{ entity.primerapellido}} {{ entity.segundoapellido }}</td>
                <td>{{ entity.cedula }}</td>
                <td>
 
                    <a href="{{ path('ticket_usuariounidad', { 'id': entity.id }) }}"><span class="icon-edit"></span></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
    <a class="btn btn-primary" href="{{ path('ticket') }}">Ir a la lista</a>
    <br>
    {% endblock %}
