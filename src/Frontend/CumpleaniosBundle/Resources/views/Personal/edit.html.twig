{% extends '::cumpleanios.html.twig' %}

 
{% block title %}Editar{% endblock %}

{% block titulo %}
    EDITAR PERSONAL
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li><a href="{{ path("cumpleanios_personal") }}">LISTADO DE PERSONAL EXTRANJERO</a></li>
  <li class="active">EDITAR PERSONAL</li>
