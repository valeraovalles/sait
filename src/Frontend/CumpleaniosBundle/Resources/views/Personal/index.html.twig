{% extends '::cumpleanios.html.twig' %}

{% block body -%}
<br>
    <h1>Personal list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cedpas</th>
                <th>Correo</th>
                <th>Ubicacion</th>
                <th>Fechanac</th>
                <th>Sexo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('personal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.cedpas }}</td>
                <td>{{ entity.correo }}</td>
                <td>{{ entity.ubicacion }}</td>
                <td>{{ entity.fechanac }}</td>
                <td>{{ entity.sexo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('personal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('personal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cumpleanios_personal_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
