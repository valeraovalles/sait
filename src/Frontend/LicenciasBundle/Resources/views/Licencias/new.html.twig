{% extends '::licencias.html.twig' %}
{% block title %}Licencias - Nueva{% endblock %}

{% block titulobanner %}
    TECNOLOGIA - LICENCIAS
{% endblock %}

    
{% block body -%}
    {{ parent() }}
    <div class="titulo">NUEVA LICENCIA</div>
    <div class="form-show_edit"><br>
    <form novalidate action="{{ path('licencias_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form._token) }}

            <div class="contenedor">
                {{ form_errors(form.nombre) }}
                <div class="labels">Nombre:</div>
                <div class="dato">{{ form_widget(form.nombre) }}</div>
            </div>
            <div class="contenedor">
                {{ form_errors(form.fechaCompra) }}
                <div class="labels">Fecha de Compra:</div>
                <div class="dato">{{ form_widget(form.fechaCompra) }}</div>
            </div>
            <div class="contenedor">
                {{ form_errors(form.fechaVencimiento) }}
                <div class="labels">Fecha de Vencimiento:</div>
                <div class="dato">{{ form_widget(form.fechaVencimiento) }}</div>
            </div>
            <div class="contenedor">
                {{ form_errors(form.descripcion) }}
                <div class="labels">Descripcion:</div>
                <div class="dato">{{ form_widget(form.descripcion) }}</div>
            </div>
            <div class="contenedor">
                {{ form_errors(form.tipo) }}
                <div class="labels">Tipo de Licencia:</div>
                <div class="dato">{{ form_widget(form.tipo) }}</div>
            </div>
            <div class="contenedor">
                {{ form_errors(form.codigo) }}
                <div class="labels">Codigo:</div>
                <div class="dato">{{ form_widget(form.codigo) }}</div>
            </div>
        <p>
            <button class="btn" type="submit">Crear</button>
        </p>
    </form>
</div><br><br>
{% endblock %}
