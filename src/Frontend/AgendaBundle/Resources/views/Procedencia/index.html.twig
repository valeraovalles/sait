{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Procedencia list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Institucion</th>
                <th>Director</th>
                <th>Areainst</th>
                <th>Telfinst</th>
                <th>Emailinst</th>
                <th>Direccion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('procedencia_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.institucion }}</td>
                <td>{{ entity.director }}</td>
                <td>{{ entity.areainst }}</td>
                <td>{{ entity.telfinst }}</td>
                <td>{{ entity.emailinst }}</td>
                <td>{{ entity.direccion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('procedencia_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('procedencia_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('procedencia_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
