{% extends '::contratos.html.twig' %}

{% block titulobanner %}
    CONTRATOS AÑOS ANTERIORES - PRINCIPAL
{% endblock %}

{% block body -%}
 {{ parent() }}
    <div class="titulo"> LISTADO DE CONTRATOS AÑOS ANTERIORES</div>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('alert') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
   {% endfor %}


    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tablalista">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Fecha de Registro</th>
                <th>Empresa</th>
                <th>Fechainicio</th>
                <th>Fechafin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr align="center">
                    <td><a href="{{ path('contratos_pasados_show', { 'id': entity.id }) }}">{{ entity.codigo }}</a></td>
                    <td>{% if entity.fechaRegistro %}{{ entity.fechaRegistro|date('Y-m-d') }}{% endif %}</td>                    
                    <td>{{ entity.empresa }}</td>
                    <td>{% if entity.fechaInicio %}{{ entity.fechaInicio|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if entity.fechaFin %}{{ entity.fechaFin|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('contratos_pasados_edit', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="editar contrato"><img width="22px" src="{{ asset('images/edit.png')}}"></a>
                        
                        <a onclick="return confirm('¿Desea eliminar?')" href="{{ path('contratos_pasados_delete', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="eliminar contrato"><img width="18px" src="{{ asset('images/mal.jpeg')}}"></a>              
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table><br><br>
<a class="btn btn-primary dropdown-toggle" href="{{ path( 'contratos_pasados_new' ) }}">Registrar Contrato</a><br><br>
    {% endblock %}