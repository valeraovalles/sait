{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Presupuesto</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Fechainicio</th>
                <td>{{ entity.fechaInicio|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechafin</th>
                <td>{{ entity.fechaFin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Montodolares</th>
                <td>{{ entity.montoDolares }}</td>
            </tr>
            <tr>
                <th>Montoeuros</th>
                <td>{{ entity.montoEuros }}</td>
            </tr>
            <tr>
                <th>Montobs</th>
                <td>{{ entity.montoBs }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('presupuesto') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('presupuesto_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('presupuesto_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
