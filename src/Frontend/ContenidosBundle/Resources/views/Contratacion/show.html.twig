                    </div>
                    <div class="contenedor">
                        <div class="labels">Fecha del Addendum:</div>
                        <div class="dato">{{ entity.fechaAddendum|date('Y-m-d') }}</div>
                    </div>
                    
                    <div class="contenedor">
                        <div class="labels">Observaciones Compras:</div>
                        <div class="dato">{{ entity.observacionesCompras }}</div>
                    </div>
                    <br><br>
            </div>
        </fieldset>
  
  
        <a href="{{ path('contratacion', { 'id': entity.id, 'id_proveedor': id_proveedor }) }}">
            <img width="85px" src="{{ asset('images/listado.jpg')}}"></a>
        </a>
    
    
  
{% endblock %}
