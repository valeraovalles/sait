{% extends '::contenidos.html.twig' %}


{% block titulobanner %}
    EDICION DE DATOS
{% endblock %}


{% block body -%}
 {{ parent() }}
    <div class="titulo">LISTADO UNIDAD SOLICITANTE</div>

    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tablalista">
        <thead>
            <tr>
                <th width="45">Proveedor</th>
                <th width="45%">Nombre de la Unidad</th>                
                <th width="10%">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr align="center">
                <td>{{ entity.idTipoproveedor}}</td>
                <td>{{ entity.nombre }}</td>                
                <td>
                    <a href="{{ path('showsolicitante', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="detalle unidad ejecutora"><img width="20px" src="{{ asset('images/lupa.png')}}"></a>
                    <a href="{{ path('editsolicitante', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="editar unidad ejecutora"><img width="20px" src="{{ asset('images/edit.png')}}"></a> 
                    <a onclick="return confirm('Desea borrar')" href="{{ path('deletesolicitante', { 'id': entity.id }) }}"><img width="15px" src="{{ asset('images/mal.png')}}"></a>   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br><br>
    <a class="btn btn-primary dropdown-toggle" href="{{ path('newsolicitante') }}">Nueva Unidad Solicitante</a>
    <br>    
{% endblock %}