{% extends '::contenidos.html.twig' %}


{% block titulobanner %}
    EDICION DE DATOS
{% endblock %}


{% block body -%}
 {{ parent() }}
    <div class="titulo">LISTADO</div>

    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tablalista">
        <thead>
            <tr>
                
                <th width="80%">Nombre</th>
                <th width="10%">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr align="center">
                <td>{{ entity.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tipoproveedor_edit', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="editar Tipo de Proveedor"><img width="20px" src="{{ asset('images/edit.png')}}"></a>
                            <a onclick="return confirm('Desea borrar')" href="{{ path('tipoproveedor_delete', { 'id': entity.id }) }}"><img width="15px" src="{{ asset('images/mal.png')}}"></a> 
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br><br>
    <a class="btn btn-primary dropdown-toggle" href="{{ path('tipoproveedor_new') }}">Nuevo Tipo-Proveedor</a>
    <br>    
{% endblock %}