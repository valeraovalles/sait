{% extends '::contenidos.html.twig' %}

{% block titulobanner %}
    PAGOS
{% endblock %}


{% block body -%}
 {{ parent() }}
    <div class="titulo">DATOS BANCARIOS ASOCIADOS AL PROVEEDOR</div>

    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tablalista">
        <thead>
            <tr>
                <th>Nombre del beneficiario</th>
                <th>Nombre del Banco Intermediario</th>
                <th>Cuenta del Banco Intermediario</th>
                <th>Nombre del Banco Beneficiario</th>
                <th>Cuenta del Banco Beneficiario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr align="center">
                <td><a href="{{ path('banco_show', { 'id': entity.id, 'id_proveedor':entity.idProveedor.id }) }}">{{ entity.nombreBeneficiario }}</a></td>
                <td>{{ entity.bancoInterm }}</td>
                <td>{{ entity.cuentaInterm }}</td>
                <td>{{ entity.bancoBenef }}</td>
                <td>{{ entity.cuentaBenef }}</td>
                <td>
                    <a href="{{ path('banco_edit', { 'id': entity.id, 'id_proveedor':entity.idProveedor.id }) }}" data-toggle="tooltip" data-placement="top" title="editar proveedor"><img width="20px" src="{{ asset('images/edit.png')}}"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <br><br>
       <a class="btn btn-primary dropdown-toggle" href="{{ path( 'banco_new',{ 'id_proveedor':id_proveedor } ) }}">Registrar Datos Bancarios </a>
        
    <br><br>
    {% endblock %}
