            </div>
        </fieldset>
        <br>
        <fieldset>       
            <legend id="c"><div class="divisor">DATOS DEL BANCO BENEFICIARIO</div> </legend>
            <div id="aprobaciones" class="form-show">
                <br>
                <div class="form-contenedor">
                    {{ form_errors(edit_form.bancoBenef) }}
                    <div class="labels">Nombre:</div>
                    <div class="widgets">{{ form_widget(edit_form.bancoBenef) }}</div>
                </div>
                <div class="form-contenedor">
                    {{ form_errors(edit_form.cuentaBenef) }}
                    <div class="labels">N&uacute;mero de Cuenta:</div>
                    <div class="widgets">{{ form_widget(edit_form.cuentaBenef) }}</div>
