{% extends '::contenidos.html.twig' %}
{% block title %}Contenidos-Proveedor- Editar{% endblock %}

{% block titulobanner %}
    BANCO
{% endblock %}
    
{% block body -%}
    {{ parent() }}

    <div class="titulo">EDITAR DATOS BANCARIOS</div>

    <form action="{{ path('banco_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
