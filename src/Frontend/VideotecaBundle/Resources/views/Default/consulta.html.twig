{% extends '::videoteca.html.twig' %}

{% block title %}CONSULTAR CINTA{% endblock %}

{% block titulo %}
    CONSULTAR CINTA
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li class="active">CONSULTAR CINTA</li>

</ol>
{% endblock %}

{% block body %}

    {{ parent() }}

        <table  class="table table-striped table-bordered">
        	<thead>
	        	<tr>
                    <th>ID Segmento</th>
	        		<th>Serial</th>
	        		<th>Titulo</th>
                    <th>Contenido Segmento</th>
                    <th>Capitulo</th>
	        	</tr>
        	</thead>

        	<tbody>
        		{% for entity in cintas %}
        		<tr>
                    <td>{{ entity['id_segmento'] }}</td>
        			<td>{{ entity['serial_cinta'] }}</td>
        			<td>{{ entity['titulo'] }}</td>
                    <td>{{ entity['contenido_segmento'] }}</td>

                    <td>{{ entity['capitulo'] }}</td>
        		</tr>
        		{% endfor %}	
        	</tbody>
        </table>

        <a class="btn btn-default" href="{{ path('videoteca_homepage') }}">IR A LA LISTA</a><br>
        <br>
{% endblock %}

         