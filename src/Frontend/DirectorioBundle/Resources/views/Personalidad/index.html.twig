{% extends '::directorio.html.twig' %}

{% block body %}
    {{parent()}}
<br>
    <h2>LISTADO DE PERSONALIDADES</h2><br><br>
    
    <table id="tablalista" style="width: 97%;">
        <thead>
            <tr align= "center">
                <th>Id</th>
                <th>Nombre</th>                     
                <th>Especialidad</th>
                <th>Pais</th>                
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr align="center">
                <td><a href="{{ path('personalidad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td align=left>{{ entity.nombre }} {{ entity.apellido }}</td>
                <td>{{ entity.especialidad }}</td>
                <td>{{ entity.pais }}</td>                
               
                    <td>
                        {% if is_granted('ROLE_DIRECTORIO_ADMIN') %}
                        <a href="{{ path('personalidad_edit', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar"><i class="icon-edit"></i></a>
                        {% endif %}
                        <a href="{{ path('personalidad_show', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar"><i class="icon-search"></i></a>
                    </td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_DIRECTORIO_ADMIN') %}<br><br><br>

    <a class="btn btn-primary" href="{{ path('personalidad_new') }}">
        NUEVA PERSONALIDAD
    </a>{% endif %}<br><br>

    {% endblock %}
