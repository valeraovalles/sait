{% extends '::directorio.html.twig' %}

{% block body -%}
    <h1>Institucion</h1>

    <table class="record_properties" border="2            ">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Institucion</th>
                <td>{{ entity.institucion }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ entity.director }}</td>
            </tr>
            <tr>
                <th>Areainst</th>
                <td>{{ entity.areainst }}</td>
            </tr>
            <tr>
                <th>Telfinst</th>
                <td>{{ entity.telfinst }}</td>
            </tr>
            <tr>
                <th>Emailinst</th>
                <td>{{ entity.emailinst }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ entity.direccion }}</td>
            </tr>
            <tr>
                <th>Pais</th>
                <td>{{ entity.pais }}</td>
            </tr>
        </tbody>
    </table>

        <br><br>
        <a class="btn" href="{{ path('institucion') }}"> Listado </a>
 
        <a class="btn btn-primary"href="{{ path('institucion_edit', { 'id': entity.id }) }}">Editar</a>
        <br><br>

        <form action="{{ path('institucion_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>

{% endblock %}

