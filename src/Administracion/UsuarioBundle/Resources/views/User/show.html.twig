{% extends '::administracion.html.twig' %}

{% block title %}Inicio - Telesur{% endblock %}

{% block titulobanner %}
    ADMINISTRACIÃ“N DE USUARIOS
{% endblock %}

{% block body %}

{{ parent() }}

<div class="titulo">DATOS DE USUARIO</div>
    {% if app.session.started %}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="Greenflash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('alert') %}
            <div class="Redflash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% endif %}
<br>
<table class="form-show">
    <tbody>
        <tr>
            <th>Username:</th>
            <td>{{ entity.user.username }}</td>
        </tr>

        <tr>
            <th>Username:</th>
            <td>
                {% if entity.user.isActive == 1 %}
                    Activo
                {% elseif entity.user.isActive == null %}
                    Inactivo
                {% endif %}
            </td>
        </tr>
        <tr>
        <th>Nombres:</th>
            <td>{{ entity.primerNombre  }} {{ entity.segundoNombre  }}</td>
        </tr>
        <tr>
        <th>Apellidos:</th>
            <td>{{ entity.primerApellido  }} {{ entity.segundoApellido  }}</td>
        </tr>
        <tr>
            <th>Cedula:</th>
            <td>{{ entity.cedula  }}</td>
        </tr>
        <tr>
            <th>Id:</th>
            <td>{{ entity.user.id }}</td>
        </tr>
    </tbody>
</table>


<br>

<form action="{{ path('user_delete', { 'id': entity.user.id }) }}" method="post" onsubmit="return confirm('Seguro que desea eliminar')">
    <a href="{{ path('user') }}">Volver</a>
    <button><a href="{{ path('user_edit', { 'id': entity.user.id }) }}">Editar</a></button>
    <button type="submit">Borrar</button>
    {{ form_widget(delete_form) }}
</form>

<br>

{% endblock %}