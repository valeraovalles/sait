{% extends '::administracion.html.twig' %}

{% block title %}Inicio - Telesur{% endblock %}

{% block titulobanner %}
    ADMINISTRACIÃ“N DE USUARIOS
{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="titulo">LISTA DE USUARIOS</div>

    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tabla_lista">
        <thead>
            <tr>
                <th style="width:100px;">Id</th>
                <th>Username</th>
                <th>Estatus</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td>
                    {% if entity.isActive == 1 %}
                        Activo
                    {% elseif entity.isActive == null %}
                        Inactivo
                    {% endif %}
                </td>
                <td>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">Ver</a>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">Editar</a>
           
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br><br><br><br>

    <button><a href="{{ path('user_new') }}">Nuevo</a></button>

    <br><br>

    <script>
    $(document).ready(function(){
       $('#tabla_lista').dataTable( { //CONVERTIMOS NUESTRO LISTADO DE LA FORMA DEL JQUERY.DATATABLES- PASAMOS EL ID DE LA TABLA
            "sPaginationType": "full_numbers" //DAMOS FORMATO A LA PAGINACION(NUMEROS)
        } );
    })
    </script>

{% endblock %}