{% extends '::base.html.twig' %}
{% block title %}Inicio - Telesur{% endblock %}

{% block body %}
<h1>Perfil</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Primernombre</th>
            <td>{{ entity.primerNombre }}</td>
        </tr>
        <tr>
            <th>Segundonombre</th>
            <td>{{ entity.segundoNombre }}</td>
        </tr>
        <tr>
            <th>Primerapellido</th>
            <td>{{ entity.primerApellido }}</td>
        </tr>
        <tr>
            <th>Segundoapellido</th>
            <td>{{ entity.segundoApellido }}</td>
        </tr>
        <tr>
            <th>Cedula</th>
            <td>{{ entity.cedula }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('perfil') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('perfil_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('perfil_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}